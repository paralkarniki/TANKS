@model IEnumerable<Assignment3_MVC_HospitalRecords.Models.PatientTbl>

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            FirstName
        </th>
        <th>
            LastName
        </th>
        <th>
            Admission
        </th>
        <th>
            Discharge
        </th>
        <th>
            IsDischarge
        </th>
        <th>
            Doctor's Name
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.firstname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.lastname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.admission)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.discharge)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.isdischarge)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DoctorTbl.firstname)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
