@model IEnumerable<Assignment3_MVC_HospitalRecords.Models.PatientTbl>

<p>

</p>
<table class="table" style="border:1px solid black">
    <tr>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Admission Date
        </th>
        <th>
            Discharged Date
        </th>
        <th>
            Discharged
        </th>
        <th>
            Doctor Name
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.firstname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.lastname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.admission)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.discharge)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.isdischarge)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DoctorTbl.firstname)
        </td>
    </tr>
}

</table>
