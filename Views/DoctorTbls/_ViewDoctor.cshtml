@model IEnumerable<Assignment3_MVC_HospitalRecords.Models.DoctorTbl>

<table class="table" style="border:1px solid black">
    @Html.RadioButton("First Name", "FirstName");
    @Html.RadioButton("Admission Date", "AdmissionDate");
    @Html.TextBox("SearchBox");


    @Html.ActionLink("Search", "Search");
    @Html.ActionLink("Clear", "Clear");

    <tr>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
      
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.firstname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lastname)
            </td>
            
        </tr>
    }

</table>

